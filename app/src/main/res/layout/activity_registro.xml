<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conteiners_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        // Texto: Registro

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRO"
            android:textAlignment="center" />

        //Texto: Nombre

        <TextView
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textAlignment="center" />

        //Campo: introducir nombre

        <EditText
            android:id="@+id/nombre"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Introduce el nombre"
            android:inputType="textPersonName" />

        //Texto: Nombre

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Correo"
            android:textAlignment="center" />

        //Campo: introducir correo

        <EditText
            android:id="@+id/correo"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Introduce el correo"
            android:inputType="textPersonName" />

        //Texto: Contraseña

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textAlignment="center" />

        //Campo: introducir contraseña

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/clave"
                android:layout_width="269dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:maxLength="20" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="64px"
                android:layout_height="64px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="2dp" />
        </LinearLayout>

        //Texto: Contraseña

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repetir Contraseña"
            android:textAlignment="center" />

        //Campo: introducir contraseña

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/clave2"
                android:layout_width="269dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:maxLength="20" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="64px"
                android:layout_height="64px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="2dp" />
        </LinearLayout>

        <Button
            android:id="@+id/botonRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="GuardarUsuario"
            android:text="Registrar"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="irIniciarSesion"
            android:text="Iniciar Sesion" />

    </LinearLayout>
</ScrollView>
